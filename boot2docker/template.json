{
    "template": {
        "name": "boot2docker",
        "author": "Jakub Klama <jakub@ixsystems.com>",
        "description": "boot2docker Docker host for FreeNAS",
        "files": true,
        "fetch": [
            {
                "url": "http://download.freenas.org/vm-templates/boot2docker/vmlinuz64",
                "sha256": null,
                "dest": "grub/vmlinuz64"
            },
            {
                "url": "http://download.freenas.org/vm-templates/boot2docker/initrd",
                "sha256": null,
                "dest": "grub/initrd"
            }
        ]
    },
    "config": {
        "docker_host": true,
        "ncpus": 1,
        "bootloader": "GRUB",
        "memsize": 2048,
        "boot_directory": "grub"
    },
    "devices" : [
        {
            "type": "NIC",
            "name": "mgmt",
            "properties" : {
                "type": "MANAGEMENT"
            }
        },
        {
            "type": "VOLUME",
            "name": "docker",
            "properties": {
                "type": "VT9P",
                "auto": true
            }
        },
        {
            "type": "VOLUME",
            "name": "mnt",
            "properties": {
                "type": "VT9P",
                "destination": "/mnt",
                "auto": false
            }
        }
    ],
    "type": "VM"
}
