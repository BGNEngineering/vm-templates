                    "sha256": "7aedc5c506bea0e2badab1f14e00c500f2f3430534eccf02e7aa57298ca33cf0"
                }
            }
        },
        {
            "type": "NIC",
            "name": "mgmt",
            "properties" : {
                "type": "MANAGEMENT"
            }
        },
        {
            "type": "NIC",
            "name": "nat",
            "properties" : {
                "type": "NAT"
            }
        }
    ],
    "type": "VM"
}
